<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegisterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/register_primary_color</item>
        <item name="colorPrimaryDark">@color/register_primary_color</item>
        <item name="colorAccent">@color/register_accent_color</item>
    </style>

    <style name="LoginTheme" parent="RegisterTheme" />

    <style name="MaterialEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_baseColor">@color/register_secondary_text_color</item>
        <item name="met_primaryColor">@color/register_accent_color</item>
    </style>


    <style name="Button.Base" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button" parent="Button.Base"/>

    <style name="RegisterButton" parent="Button">
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SocialButton" parent="Button">
        <item name="android:paddingLeft">@dimen/register_standard_spacing</item>
        <item name="android:paddingRight">@dimen/register_standard_spacing</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FacebookButton" parent="SocialButton">
        <item name="android:background">@drawable/bg_button_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GoogleButton" parent="SocialButton">
        <item name="android:background">@drawable/bg_button_google</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>